<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Operatory arytmetyczne" Height="450" Width="800">
    <Grid>
        <GroupBox Header="Wprowadź dane (wartości całkowite):" Margin="10, 10, 10, 300">
            <StackPanel>
                <Label Content="Podaj a:"/>
                <TextBox Name="inputA"/>
                <Label Content="Podaj b:"/>
                <TextBox Name="inputB"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Wybierz działanie:" Margin="10, 150, 10, 10">
            <StackPanel>
                    <Button Content="+" Width="100" HorizontalAlignment="Left" Margin="5" Click="dodaj"/>
                    <Button Content="-" Width="100" HorizontalAlignment="Left" Margin="5" Click="odejmij"/>
                    <Button Content="*" Width="100" HorizontalAlignment="Left" Margin="5" Click="pomnoz"/>
                    <Button Content="/" Width="100" HorizontalAlignment="Left" Margin="5" Click="podziel"/>
                    <Button Content="%" Width="100" HorizontalAlignment="Left" Margin="5" Click="modulo"/>
                    <Label Name="result"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
